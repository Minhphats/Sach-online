@using Lab03_4.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<SACH>
@{
    ViewBag.Title = "SachTheoChuDe";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
    <h2 class="text-center">SÁCH THEO CHỦ ĐỀ</h2>
    <hr>
    <div class="row text-center">
        @foreach (var sach in Model)
        {
            <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">
                <div class="thumbnail">
                    <img src="~/Sach/@sach.HinhMinhHoa" alt="@sach.TenSach"
                         class="img-responsive img-rounded imgbook" height="100" />
                    <div class="caption">
                        <h4 style="min-height:70px;">
                            <a href="@Url.Action("Chitietsach","SachOnline",new {id = sach.MaSach })">
                                @sach.TenSach
                            </a>
                        </h4>
                        <p>
                            <a href="@Url.Action("ThemGioHang","GioHang", new { ms = sach.MaSach, url = Request.Url.ToString() })" class="btn btn-primary" role="button">
                                <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true">
                                </span> Add to Cart
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount;
<div class ="MenuTrang">   
    @Html.PagedListPager(Model, page => Url.Action("SachTheoChuDe", new { iMaCD = ViewBag.MaCD, page = page })) 
</div>
<style>
    .MenuTrang {
        display: inline;
        text-align: center;
    }
</style>
</div>
